---
import Layout from "../layouts/Layout.astro";
import { allFeeds } from "../data/parser";
import { fetchFeeds } from '../lib/api/fetchFeeds'

let feeds;
try {
    const res = await fetchFeeds({
        method: "GET",
        url: Astro.request.url,
        req: Astro.request
    })
    const { data } = JSON.parse(res)
    feeds = await allFeeds(data)
} catch (error) {
    console.log(error)
}
---

<Layout title="Freed - A Collection of Developer RSS Feeds">
    <div id="feed_list">
        {
            feeds ? feeds?.map((feed) => {
                return (
                    <div class="feed">
                        <h2>
                            <a href={`/feed/?id=${feed.id}`}>{feed.title}</a>
                        </h2>
                        <p>{feed.link}</p>
                        {
                            feed.title === "Syntackle" ? <p>shameless promotion &#10085;</p> : <></>
                        }
                    </div>
                );
            }) : (
                <p>No feeds found!</p>
            )
        }
    </div>
</Layout>

<style>
    #feed_list {
        display: flex;
        flex-direction: column;
        justify-content: center;
        gap: 2rem;
    }
    .feed {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        padding: 1.5rem;
        border: 0.3rem solid rgba(201, 125, 96, 0.3);
        border-radius: 1rem;
    }
</style>
